month_one = 1
month_two = 2
month_three = 3
month_four = 4
month_five = 5
month_six = 6
month_seven = 7
month_eight = 8
month_nine = 9
month_ten = 10
month_eleven = 11
month_twelve = 12

if month_one == 1:
    print("January")
elif month_two == 2:
     print("February")
elif month_three == 3: 
    print("March")
elif month_four == 4:
    print("April")
elif month_five == 5:
    print("May")
elif month_six == 6:
    print("June")        
elif month_seven == 7:
    print("July")
elif month_eight == 8:
    print("August")
elif month_nine == 9:
    print("September")
elif month_ten == 10:
    print("October")
elif month_eleven == 11:
    print("November")
elif month_twelve <= 12:
    print("December")
elif month_twelve > 12:
    print("Enter a number between 1-12")  
else:
    print("Thank you")            

